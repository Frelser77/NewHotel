@model IEnumerable<NewHotel.Models.Prenotazione>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crea Nuovo</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class=" d-flex align-items-end">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by name or surname..." />
        <button type="submit" class="btn btn-outline-secondary btn-sm rounded-0">Search</button>
    </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.DataPrenotazione)</th>
                <th>@Html.DisplayNameFor(model => model.DataCheckIn)</th>
                <th>@Html.DisplayNameFor(model => model.DataCheckOut)</th>
                <th>@Html.DisplayNameFor(model => model.NumeroOspiti)</th>
                <th>@Html.DisplayNameFor(model => model.Acconto)</th>
                <th>@Html.DisplayNameFor(model => model.PrezzoTotale)</th>
                <th>@Html.DisplayNameFor(model => model.Note)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                <th>@Html.DisplayNameFor(model => model.Camera)</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DataPrenotazione)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataCheckIn)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataCheckOut)</td>
                    <td>@Html.DisplayFor(modelItem => item.NumeroOspiti)</td>
                    <td>@Html.DisplayFor(modelItem => item.Acconto)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrezzoTotale)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                   <td>
    @Html.DisplayFor(modelItem => item.Cliente.Nome) @Html.DisplayFor(modelItem => item.Cliente.Cognome)
</td>

                    <td>@Html.DisplayFor(modelItem => item.Camera.Descrizione)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdPrenotazione" class="btn btn-primary btn-sm">Modifica</a>
                        <a asp-action="Details" asp-route-id="@item.IdPrenotazione" class="btn btn-info btn-sm">Dettagli</a>
                        <a asp-action="Delete" asp-route-id="@item.IdPrenotazione" class="btn btn-danger btn-sm">Elimina</a>
                        <a asp-controller="Servizio" asp-action="Create" asp-route-id="@item.IdPrenotazione">Aggiungi Servizio</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

